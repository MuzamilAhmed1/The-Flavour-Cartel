html(lang="en")
  head
    title The Flavour Cartel - Recipes by Category
    link(rel="stylesheet" href="/styles.css") 
  body
    header
      .navbar
        h1 The Flavour Cartel
        nav
          ul
            li: a(href="/") Home
            li: a(href="/recipes") Browse Recipes
            li: a(href="/submit-recipe") Submit Recipe
            li: a(href="/users") Users
            li: a(href="/login") Login

    .main-content
      // Dynamic Category Tabs
      .categories
        h3 Explore by Category
        .category-tabs
          ul
            li: a(href="/recipes") All Recipes
            each cat in categories
              li
                a(href=`/recipes?category=${cat.name}`) #{cat.name}

      // Recipes List
      .recipe-container
        h2= selectedCategory
        if recipes.length
          .recipe-grid
            each recipe in recipes
              .recipe-card
                img(src=`/images/${recipe.image}` alt=recipe.title)
                h4= recipe.title
                p= recipe.description
                a.btn(href=`/recipe/${recipe.id}`) View Recipe
        else
          p No recipes found in this category.

    // Footer locked at the bottom
    footer
      p
        | &copy; 2025 The Flavour Cartel | Made with ❤️ 
        | 
        a(href="/conduct") Code of Conduct

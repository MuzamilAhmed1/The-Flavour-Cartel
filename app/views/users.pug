doctype html
html(lang="en")
  head
    title Users List - Flavour Cartel
    link(rel="stylesheet", href="/styles.css")
  body
    // Navbar (Same as Other Pages)
    header
      .navbar
        h1 Flavour Cartel
        nav
          ul
            li: a(href="/") Home
            li: a(href="/recipes") Browse Recipes
            li: a(href="/submit-recipe") Submit Recipe
            li: a(href="/users") Users
            li: a(href="/login") Login

    // Users List Section
    .main-content
      .users-container
        h1 Registered Users
        table.users-table
          thead
            tr
              th ID
              th Name
              th Email
              th Profile Picture
              th Joined On
              th Actions
          tbody
            each user in users
              tr
                td= user.id
                td= user.name
                td= user.email
                td
                  img(src=`/images/${user.profile_picture}`, alt="Profile Picture")
                td= user.created_at
                td
                  a.btn(href=`/users/${user.id}`) View Profile

    // Footer (Same as Other Pages)
    footer
      p
        | &copy; 2025 The Flavour Cartel | Made with ❤️ 
        | 
        a(href="/conduct") Code of Conduct